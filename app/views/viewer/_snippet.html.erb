<script>
  var lvhServer = '/snippets/json2';
  var repeatPulling = window.setInterval('pullSnippets();', 12000);
  var currentSnippet;

  var pullSnippets = function() { 
    $.getJSON(lvhServer, {
      format: "json"
    }).done(function(data) {
      updateHTML(data);
    });
  }
  
  var updateHTML = function(data) {
    currentSnippet = data.currentSnippet;
    $('#part').html(currentSnippet.french);
  }

  pullSnippets();



  $('#do_translate').on('click', function(e){
    e.preventDefault();
    $('#part').html(currentSnippet.german)
    $('#translate_actions').hide();
    $('#actions').show();
  });
</script>